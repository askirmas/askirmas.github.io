{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://askirmas.github.io/cv/cross.schema.json",
  "oneOf": [
    {"$ref": "#/definitions/Interfaces-Contracts"}
  ],
  "definitions": {
    "Interfaces-Contracts": {
      "enum": ["TypeScript", "JsonSchema", "JSDoc"]
    },
    "Methodology": {
      "oneOf": [
        {"$ref": "#/definitions/XP"},
        {"$ref": "#/definitions/BEM"},
        {"enum": ["V-Model", "Incremental Build", "Atomic CSS"]}
      ]
    },
    "Methodology-Practice": {
      "oneOf": [
        {"$ref": "#/definitions/TDD"},
        {"enum": ["BDD"]}
      ]
    },
    "Practive": {
      "oneOf": [
        {"$ref": "#/definitions/Git Trunk"},
        {"$ref": "#/definitions/Coverage"},
        {"enum": ["CI/CD"]}
      ]
    },
    "Modeling": {
      "oneOf": [
        {"$ref": "#/definitions/ERM"},
        {"enum": ["DFD", "V-diagram", "Holon", "Feedback loops"]}
      ]
    },
    "Architecture": {
      "enum": ["n-tier",  "SOA Microservices"]
    },
    "Pattern": {
      "enum": ["MVC", "MVP"]
    },
    "Paradigms": {
      "oneOf": [
        {
          "enum": [
            "Data-Driven",
            "Declarative",
            "Dataflow",
            "Dataflow--Reactive",
            "Event-Driven",
            "Metaprogramming",
            "Metaprogramming--Macro",
            "Structured--OO--Class"
          ]    
        },
        {"$ref": "#/definitions/Declarative--Functional"},
        {"$ref": "#/definitions/Dataflow--Reactive"},
        {"$ref": "#/definitions/Structured--OO--Prototype"},
        {"$ref": "#/definitions/Imperative--OO"}
      ]
    },
    "XP": {
      "const": "XP",
      "description": "http://wiki.c2.com/?ExtremeProgramming",
      "title": "'Extreme' means these practices get 'turned up' to a much higher 'volume' than on traditional projects"
    },
    "BEM": {
      "const": "BEM",
      "title": "Reduce  the complexity of your selectors; use a class-centric methodology like BEM",
      "description": "https://developers.google.com/web/fundamentals/performance/rendering/reduce-the-scope-and-complexity-of-style-calculations"
    },

    "TDD": {
      "const": "TDD",
      "description": "https://medium.com/javascript-scene/tdd-changed-my-life-5af0ce099f80",
      "title": "It's 7:15 am and customer support is swamped"
    },
    "Coverage": {
      "const": "Coverage: 100%",
      "description": "https://medium.com/javascript-scene/testing-software-what-is-tdd-459b2145405c",
      "title": "Use the right kind of test for the job at hand"
    },
    "Git Trunk": {
      "const": "Git Trunk",
      "description": "https://cloud.google.com/solutions/devops/devops-tech-trunk-based-development",
      "title": "Trunk-based development is a required practice for continuous integration"
    },
    "ERM": {
      "const": "ERM",
      "title": "ER model can be used in the specification of domain-specific ontologies",
      "description": "https://en.wikipedia.org/wiki/Entity%E2%80%93relationship_model"
    },

    "Structured--OO--Prototype": {
      "const": "PBP",
      "description": "https://medium.com/javascript-scene/master-the-javascript-interview-what-s-the-difference-between-class-prototypal-inheritance-e4cd0a7562e9",
      "title": "Unfortunately, most JavaScript developers don't understand JavaScript's object system, or how to put it to best use"
    },
    "Declarative--Functional": {
      "const": "Functional",
      "description": "https://en.wikipedia.org/wiki/Turing_completeness#Non-Turing-complete_languages",
      "title": "Untyped lambda calculus is Turing-complete, simply typed lambda calculus is not"
    },
    "Dataflow--Reactive": {
      "const": "Reactive",
      "description": "https://www.reactivemanifesto.org/",
      "title": "We want systems that are Responsive, Resilient, Elastic and Message Driven"
    },
    "Imperative--OO": {
      "$comment": "Structured--OO",
      "const": "OOP",
      "description": "https://medium.com/better-programming/object-oriented-programming-the-trillion-dollar-disaster-92a4b666c7c7",
      "title": "Object oriented programs are offered as alternatives to correct ones. Edsger W. Dijkstra"
    },
    "Bus factor": {"const": "Bus factor"},
    "semver": {"const": "Semantic Versioning"}
  }
}